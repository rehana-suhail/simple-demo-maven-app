pipeline {
    agent any
    tools {
        maven 'maven-3.0.2'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package -Dmaven.test.failure.ignore clean deploy sonar:sonar -Dsonar.host.url="http://ec2-52-66-236-162.ap-south-1.compute.amazonaws.com:9000"'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
      }
}
